  <script>
      function getQueryStringObject() {
        var a = window.location.search.substr(1).split('&');
        if (a == "") return {};
        var b = {};
        for (var i = 0; i < a.length; ++i) {
            var p = a[i].split('=', 2);
            if (p.length == 1)
                b[p[0]] = "";
            else
                b[p[0]] = decodeURIComponent(p[1].replace(/\+/g, " "));
        }
        return b;
        }

        var qs = getQueryStringObject();
        
        //alert(qs.fin_use_num);
        var jwtToken = sessionStorage.getItem('jwtToken');
        $.ajax({
            url:'http://localhost:3000/balance',
            type : 'POST',
            headers : {
                'x-access-token' : jwtToken
            },
            data : {
                fin_use_num : qs.fin_use_num,
                bankName : qs.bankName,
                account_num_masked : qs.account
            },
            success:function(data){
                console.log(data);
                $("#bankName").text(qs.bankName);
                $("#accountNum").text(qs.account);
                $("#balanceText").text("송금 후 잔액   "+data.balance_amt+"원");
                var name = qs.bankName;
                
                if(name == '수협은행'){
                    $("#bankImg").attr('src', 'img/bank/ShBank.png');
                }
                else if(name=='SC은행'){
                  $("#bankImg").attr('src', 'img/bank/SCbank.png');
                }
                else if(name=='오픈뱅킹'){
                  $("#bankImg").attr('src', 'img/bank/openBank.jpg');
                }
                else if(name=='국민은행'){
                  $("#bankImg").attr('src', 'img/bank/KbBank.png');
                }
                else if(name=='IBK기업은행'){
                  $("#bankImg").attr('src', 'img/bank/IBKbank.png');
                }
                else {
                }
            }
        })

        var jwtToken = sessionStorage.getItem('jwtToken')
        fetchUserData();
        function fetchUserData(){
            $.ajax({
                url:'http://localhost:3000/lasttran',
                type : 'POST',
                headers : {
                    'x-access-token' : jwtToken
                },
                success:function(data){
                    console.log(data);
				    	      var total = 0;
						        var soju = data[0].tSoju;
						        var beer = data[0].tBeer;
						        var cost = (soju * 100) + (beer * 130);
						        total += cost;
					$("#totalCost").text("송금 금액 "+total + "원"); 
                }
            })
        }

        $("#OkBtn").click(function(){
        window.location = "/collect"
      })
